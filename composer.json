{
    "name": "siterig/mailerlite",
    "license": "proprietary",
    "type": "statamic-addon",
    "require": {
        "php": "^8.0 || ^8.1 || ^8.2",
        "edalzell/forma": "^3.0",
        "laravel/framework": "^10.0 || ^11.0",
        "mailerlite/mailerlite-api-v2-php-sdk": "0.3.2",
        "statamic/cms": "^5.0"
    },
    "description": "Subscribe your Statamic v3 contact form submissions straight into MailerLite",
    "authors": [
        {
            "name": "Matt Stone",
            "email": "matt@rockandscissor.com",
            "homepage": "https://www.rockandscissor.com",
            "role": "Co-founder"
        },
        {
            "name": "Craig Bowler",
            "email": "craig@rockandscissor.com",
            "homepage": "https://www.rockandscissor.com",
            "role": "Co-founder"
        },
        {
            "name": "Jamie McGrory",
            "role": "Consultant Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "SiteRig\\MailerLite\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "MailerLite",
            "description": "MailerLite addon for Statamic"
        },
        "laravel": {
            "providers": [
                "SiteRig\\MailerLite\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
